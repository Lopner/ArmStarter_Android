<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"

    tools:showIn="@layout/app_bar_main">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <!--CONTAINER ITEMS-->

        <LinearLayout
            android:id="@+id/linearLayout_container_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_header_item"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout_container_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_header_item"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_reaction7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#A64B00"
                    android:gravity="center"
                    android:text="125"
                    android:textColor="@color/colorAccent"
                    android:typeface="serif"></TextView>

                <TextView
                    android:id="@+id/textView_power2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView_reaction9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#008500"
                    android:gravity="center"
                    android:text="125"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView_reaction8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#A60000"
                    android:gravity="center"
                    android:text="125"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_container_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_header_item"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_reaction7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ramkatextview"
                    android:gravity="center"
                    android:text="125"
                    android:textColor="@color/colorAccent"
                    android:typeface="serif"></TextView>

                <TextView
                    android:id="@+id/textView_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView_reaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#269926"
                    android:gravity="center"
                    android:text="125"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView_reaction2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#BF3030"
                    android:gravity="center"
                    android:text="125"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_container_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_header_item"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_reaction7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradtextview"
                    android:gravity="center"
                    android:text="125"
                    android:textColor="@color/colorAccent"
                    android:typeface="serif"></TextView>

                <TextView
                    android:id="@+id/textView_power3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView_reaction4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00CC00"
                    android:gravity="center"
                    android:text="125"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView_reaction3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FF0000"
                    android:gravity="center"
                    android:text="125"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_container_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_header_item"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_container_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_header_item"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/graph"
                android:layout_alignLeft="@id/graph"
                android:layout_marginBottom="16dp"
                android:max="20"

                android:progress="1"
                android:thumb="@drawable/ic_repeat_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_container_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_header_item"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_RepeatNumbers"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/seekBar"
                android:layout_alignLeft="@id/seekBar"

                android:text="RepeatNubers" />
        </LinearLayout>


        <!--CONTAINER ITEMS-->

    </LinearLayout>

    <!--CONTAINER ITEMS-->


    <!--CONTAINER ITEMS-->


    <!--CONTAINER ITEMS-->

</RelativeLayout>




